var gulp = require('gulp');
var mocha = require('gulp-mocha');

gulp.task('test', function(){
	  gulp.src('./test/test.js', {read: false})
	  .pipe(mocha({reporter: 'nyan'}))
	      });

gulp.task('watch', function(){
	gulp.watch('./server.js', ['test']);
    });


